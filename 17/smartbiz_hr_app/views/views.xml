<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
  <record model="ir.actions.client" id="smartbiz_hr_action">
    <field name="name">HR Interface</field>
    <field name="tag">smartbiz_hr_interface</field>
    <field name="target">fullscreen</field>
  </record>


    <!-- Nhóm mới -->
    <record id="group_hr_portal" model="res.groups">
      <field name="name">HR Portal User</field>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
  </record>
  <!-- Menu -->
  <!-- <template id="assets_backend_inherit" inherit_id="web.assets_common" name="HR Portal Redirect JS">
    <xpath expr="." position="inside">
        <script type="module" src="/smartbiz_hr_app/static/src/js/redirect.js"/>
    </xpath>
</template> -->
    <record id="view_hr_leave_form_inherit_plate" model="ir.ui.view">
      <field name="name">hr.leave.form.inherit.plate</field>
      <field name="model">hr.leave</field>
      <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='name']" position="before">
              <field name="take_with"/>
              <field name="plate_number"/>
          </xpath>
      </field>
  </record>
    

  <!-- Top menu item -->

  <menuitem name="SmartBiz HR Interface"
    id="menu_smartbiz_hr_interface"
    action="smartbiz_hr_action"
    sequence="1"
    web_icon="smartbiz_hr_app,static/description/hr_interface.png"
  />

</odoo>

<!-- pivots -->

    <record model="ir.ui.view" id="sdm_device_pivot">
      <field name="name">sdm_device_pivot</field>
      <field name="model">sdm.device</field>
      <field name="arch" type="xml">
        <pivot string="Device">
            <field name="name" type="row"/>
        </pivot>
      </field>
    </record>

<!-- graphs -->

    <record model="ir.ui.view" id="sdm_device_graph">
      <field name="name">sdm_device_graph</field>
      <field name="model">sdm.device</field>
      <field name="arch" type="xml">
        <graph string="Device" type="bar" stacked="False">
            <field name="name" type="row"/>
        </graph>
      </field>
    </record>

<!-- Gantt -->

<!-- Search -->
    <record id="view_sdm_device_search" model="ir.ui.view">
      <field name="name">sdm.device.search</field>
      <field name="model">sdm.device</field>
      <field name="arch" type="xml">
        <search string="Tìm thiết bị">
          <field name="name" string="Tên"/>
          <field name="code" string="Mã"/>
          <field name="device_type_id" string="Loại thiết bị"/>
          <field name="location_id" string="Vị trí"/>
          <filter name="flt_normal" string="Bình thường" domain="[('status','=','normal')]"/>
          <filter name="flt_abnormal" string="Bất thường" domain="[('status','=','abnormal')]"/>
          <filter name="flt_offline" string="Mất kết nối" domain="[('status','=','not_available')]"/>
          <separator/>
          <filter name="flt_low_temp" string="Nhiệt độ &lt; 620°C" domain="[('temperature','&lt;',620)]"/>
          <group expand="0" string="Nhóm theo">
            <filter name="grp_type" string="Loại thiết bị" context="{'group_by':'device_type_id'}"/>
            <filter name="grp_loc" string="Vị trí" context="{'group_by':'location_id'}"/>
            <filter name="grp_status" string="Trạng thái" context="{'group_by':'status'}"/>
          </group>
        </search>
      </field>
    </record>


<?xml version="1.0" encoding="UTF-8"?>
<templates id="MainMenu" xml:space="preserve">
    <div t-name="MainMenu" class="interface-fullscreen">
        <div class="s_barcode_main_menu_container">
            <!-- Nút quay lại (back) được đặt bên trong s_barcode_main_menu_container -->
            <a href="#" class="button-back" t-on-click="() => this.home.toggle(true)">
                <i class="icon-back oi oi-chevron-left"></i>
            </a>

            <!-- Container mã vạch -->
            <div class="barcode-container">
                <div class="mobile-scanner">
                    <img src="/barcodes/static/img/barcode.png" alt="Barcode" class="image-barcode button-scan" t-on-click="openMobileScanner"/>
                    <div class="laser-animation"></div>
                </div>
            </div>
            
            <!-- Các nút chức năng -->
            <div class="main-buttons">
                <!-- <button class="button-operations"  t-on-click="() => this.openInventory()">
                    Điều chỉnh tồn kho 
                </button> -->
            </div>
        </div>
    </div>
</templates>

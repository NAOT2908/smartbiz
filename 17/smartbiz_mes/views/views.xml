            <field name="name" />
            <field name="process_id" />
            <field name="production_line_type_id" />
            <field name="bom_id" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_production_request_form">
    <field name="name">smartbiz_mes_production_request_form</field>
    <field name="model">smartbiz_mes.production_request</field>
    <field name="priority" eval="6" />

            <field name="start" />
            <field name="plan_finish" />
            <field name="schedule_finish" />
            <field name="finish" />
            <field name="request_product_ids" />
            <field name="request_byproduct_ids" />
            <field name="request_material_ids" />
            <field name="production_ids" />
            <field name="picking_ids" />
            <field name="purchase_ids" />
            <field name="request_product" />
            <field name="request_byproduct" />
            <field name="request_material" />
            <field name="production" />
            <field name="picking" />
            <field name="purchase" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_request_material_form">
    <field name="name">smartbiz_mes_request_material_form</field>
    <field name="model">smartbiz_mes.request_material</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Request Material">
        <sheet>
          <group col="1">
            <field name="production_request_id" />
            <field name="product_id" />
            <field name="bom_id" />
            <field name="quantity" />
            <field name="available_quantity" />
            <field name="reserved_quantity" />
            <field name="done_quantity" />
            <field name="used_quantity" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_request_product_form">
    <field name="name">smartbiz_mes_request_product_form</field>
    <field name="model">smartbiz_mes.request_product</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Request Product">
        <sheet>
          <group col="1">
            <field name="production_request_id" />
            <field name="product_id" />
            <field name="bom_id" />
            <field name="main_product" />
            <field name="quantity" />
            <field name="processing_quantity" />
            <field name="done_quantity" />
            <field name="remain_quantity" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_request_byproduct_form">
    <field name="name">smartbiz_mes_request_byproduct_form</field>
    <field name="model">smartbiz_mes.request_byproduct</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Request ByProduct">
        <sheet>
          <group col="1">
            <field name="production_request_id" />
            <field name="product_id" />
            <field name="bom_id" />
            <field name="quantity" />
            <field name="processing_quantity" />
            <field name="done_quantity" />
            <field name="remain_quantity" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_capacity_form">
    <field name="name">smartbiz_mes_capacity_form</field>
    <field name="model">smartbiz_mes.capacity</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">

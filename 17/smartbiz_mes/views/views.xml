  <record model="ir.ui.view" id="smartbiz_mes_production_schedule_form">
    <field name="name">smartbiz_mes_production_schedule_form</field>
    <field name="model">smartbiz_mes.production_schedule</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Production Schedule">
        <sheet>
          <group col="1">
            <field name="name" />
            <field name="production_request_id" />
            <field name="depend_schedule_ids" />
            <field name="depend_type" />
          </group>
        </sheet>
      </form>
    </field>

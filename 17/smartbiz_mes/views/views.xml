<odoo>

  <!-- Forms -->

  <record model="ir.ui.view" id="mrp_production_form">
    <field name="name">mrp_production_form</field>
    <field name="model">mrp.production</field>
    <field name="priority" eval="7" />
    <field name="inherit_id" ref="mrp.mrp_production_form_view" />
    <field name="arch" type="xml">

      <xpath expr="//field[@name='user_id']" position="after">
        <field name="production_line_id" />
        <field name="production_request_id" />
      </xpath>
    </field>
  </record>

  <record model="ir.ui.view" id="mrp_workcenter_form">
    <field name="name">mrp_workcenter_form</field>
    <field name="model">mrp.workcenter</field>
    <field name="priority" eval="7" />
    <field name="inherit_id" ref="mrp.mrp_workcenter_view" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='resource_calendar_id']" position="after">
        <field name="production_line_id" />
      </xpath>
    </field>
  </record>

  <record model="ir.ui.view" id="mrp_bom_form">
    <field name="name">mrp_bom_form</field>
    <field name="model">mrp.bom</field>
    <field name="priority" eval="7" />
    <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
    <field name="arch" type="xml">

      <xpath expr="//page[@name='by_products']" position="after">
        <page name="bom_components" string="Thành phần">
          <field name="components_ids" />
        </page>
      </xpath>
    </field>
  </record>

  <record model="ir.ui.view" id="stock_picking_form">
    <field name="name">stock_picking_form</field>
    <field name="model">stock.picking</field>
    <field name="priority" eval="7" />
    <field name="inherit_id" ref="stock.view_picking_form" />
    <field name="arch" type="xml">

      <xpath expr="//field[@name='location_dest_id']" position="after">
        <field name="production_request_id" />
      </xpath>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_package_form">
    <field name="name">smartbiz_mes_package_form</field>
    <field name="model">smartbiz_mes.package</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Package">
        <sheet>
          <group col="1">
            <field name="name" />
            <field name="current_step" />
            <field name="current_component_id" />
            <field name="last_qty" />
            <field name="current_workorder_id" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_factory_form">
    <field name="name">smartbiz_mes_factory_form</field>
    <field name="model">smartbiz_mes.factory</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Factory">
        <sheet>
          <group>
            <field name="name" />
            <field name="company_id" />
          </group>
          <notebook>
            <page string="Production Lines">
              <field name="production_lines_ids" />
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_production_line_form">
    <field name="name">smartbiz_mes_production_line_form</field>
    <field name="model">smartbiz_mes.production_line</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Production Line">
        <sheet>
          <group col="2">
            <group>
              <field name="name" />
              <field name="code" />
            </group>
            <group>
              <field name="type_id" />
              <field name="picking_type_id" />
              <field name="factory_id" />
            </group>
          </group>
          <notebook>
            <page string="Work Centers">
              <field name="work_centers_ids" />
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_production_activity_form">
    <field name="name">smartbiz_mes_production_activity_form</field>
    <field name="model">smartbiz_mes.production_activity</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Production Activity">
        <sheet>
          <group col="1">
            <field name="work_order_id" />
            <field name="component_id" />
            <field name="quantity" />
            <field name="quality" />
            <field name="lot_id" />
            <field name="name" />
            <field name="package_id" />
            <field name="start" />
            <field name="finish" />
            <field name="duration" />
            <field name="status" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_bom_components_form">
    <field name="name">smartbiz_mes_bom_components_form</field>
    <field name="model">smartbiz_mes.bom_components</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form BoM Components">
        <sheet>
          <group col="2">
            <group>
              <field name="name" />
              <field name="type" />
              <field name="quantity" />
            </group>
            <group>
              <field name="material_id" invisible="type != 'material'"
                domain="[('bom_id','=',bom_id)]" />
              <field name="product_id" invisible="type != 'product'"
                domain="[('bom_id','=',bom_id)]" />
              <field name="bom_id" />
            </group>
          </group>
          <notebook>
            <page string="Công đoạn">
              <field name="operations_ids" domain="[('bom_id','=',bom_id)]" />
            </page>
            <page string="Đóng gói">
              <group>
                <field name="package_quantity" />
                <field name="print_label" />
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_production_line_type_form">
    <field name="name">smartbiz_mes_production_line_type_form</field>
    <field name="model">smartbiz_mes.production_line_type</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Production Line Type">
        <sheet>
          <group col="1">
            <field name="name" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_production_report_form">
    <field name="name">smartbiz_mes_production_report_form</field>
    <field name="model">smartbiz_mes.production_report</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Production Report">
        <sheet>
          <group col="1">
            <field name="production_order_id" />
            <field name="product_id" />
            <field name="currency_id" />
            <field name="date" />
            <field name="planned_quantity" />
            <field name="produced_quantity" />
            <field name="remaining_quantity" />
            <field name="yield_percentage" />
            <field name="component_cost" />
            <field name="operation_cost" />
            <field name="total_cost" />
            <field name="component_cost_per_unit" />
            <field name="operation_cost_per_unit" />
            <field name="cost_per_unit" />
            <field name="expected_duration" widget="float_time" />
            <field name="duration" widget="float_time" />
            <field name="duration_per_unit" widget="float_time" />
            <field name="byproduct_cost" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_process_form">
    <field name="name">smartbiz_mes_process_form</field>
    <field name="model">smartbiz_mes.process</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Process">
        <sheet>
          <group col="2">
            <group>
              <field name="name" />
            </group>
            <group>
              <field name="product_id" />
            </group>
          </group>
          <notebook>
            <page string="Công đoạn">
              <field name="operations_ids" />
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_operation_form">
    <field name="name">smartbiz_mes_operation_form</field>
    <field name="model">smartbiz_mes.operation</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Operation">
        <sheet>
          <group col="2">
            <group>
              <field name="name" />
              <field name="process_id" />
            </group>
            <group>
              <field name="production_line_type_id" />
              <field name="product_id" />
              <field name="bom_id" domain="[('product_id','=',product_id)]" />
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_request_form">
    <field name="name">smartbiz_mes_request_form</field>
    <field name="model">smartbiz_mes.request</field>
    <field name="priority" eval="6" />
    <field name="arch" type="xml">
      <form string="Form Request">
        <header>
          <button name="action_draft_confirm" string="Confirm" type="object"
            invisible="state != 'draft'" />
          <button name="action_confirmed_create_mos" string="Create MOs" type="object"
            invisible="state != 'confirmed'" />
          <field name="state" widget="statusbar" />
        </header>
        <sheet>
          <div class="oe_button_box" name="button_box">
            <button name="action_production" type="object" class="oe_stat_button" icon="fa-info">
              <field string="Production" name="production" widget="statinfo" />
            </button>
            <button name="action_purchase" type="object" class="oe_stat_button" icon="fa-usd">
              <field string="Purchase" name="purchase" widget="statinfo" />
            </button>
            <button name="action_picking" type="object" class="oe_stat_button" icon="fa-info">
              <field string="Picking" name="picking" widget="statinfo" />
            </button>
            <button name="action_move" type="object" class="oe_stat_button" icon="fa-info">
              <field string="Move" name="move" widget="statinfo" />
            </button>

          </div>
          <group col="2">
            <group>
              <field name="name" />
              <field name="product_id" />
              <field name="process_id" domain="[('product_id','=',product_id)]" />
            </group>
            <group>
              <field name="quantity" />
              <field name="processing_quantity" />
              <field name="done_quantity" />
              <field name="remain_quantity" />
            </group>
          </group>
          <group col="2">
            <group string="Bắt đầu">
              <field name="plan_start" />
              <field name="schedule_start" />
              <field name="start" />
            </group>
            <group string="Kết thúc">
              <field name="plan_finish" />
              <field name="schedule_finish" />
              <field name="finish" />
            </group>
          </group>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers" />
          <field name="activity_ids" widget="mail_activity" />
          <field name="message_ids" widget="mail_thread" />
        </div>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="purchase_order_form">
    <field name="name">purchase_order_form</field>
    <field name="model">purchase.order</field>
    <field name="priority" eval="7" />

    <field name="inherit_id" ref="mrp.mrp_workcenter_tree_view" />
    <field name="priority" eval="7" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='name']" position="after">
        <field name="production_line_id" optional="show" />
      </xpath>
    </field>
  </record>

  <record model="ir.ui.view" id="smartbiz_mes_package_tree">
    <field name="name">smartbiz_mes_package_tree</field>
    <field name="model">smartbiz_mes.package</field>
    <field name="priority" eval="7" />

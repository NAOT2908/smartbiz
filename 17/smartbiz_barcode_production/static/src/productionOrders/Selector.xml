<templates>
    <t t-name="Selector">
        <div class="s_selector-modals">
            <div class="s_selector-modal-content">
                <div class="s_selector-header">
                    <h2><t t-esc="props.title" /></h2>
                    <i class="fa fa-barcode" t-on-click="openManualScanner"/>
                </div>
                <t t-if="props.isSelector">
                    <input t-model="state.searchQuery" placeholder="Tìm kiếm..." class="s_selector-search-input"/>
                    <input t-model="state.quantity" t-if="props.title == 'Chọn sản phẩm'" placeholder="Nhập số lượng sản phẩm" class="s_selector-search-input"/>
                    <ul class="s_selector-record-list">
                        <t t-foreach="filteredRecords" t-as="record" t-key="record.id">
                            <li t-on-click="()=>this.selectRecord(record.id)" t-att-class="{'s_selector-selected': state.selectedRecords.includes(record.id)}">
                                <span class="record-name"><t t-esc="record.name || record.display_name || record.product_name"/></span>
                                <span class="record-name"><t t-esc="record.package || ''"/></span>
                                <span class="record-name"><t t-esc="record.quantity || ''"/></span>
                                <span class="record-name"><t t-esc="record.product_uom || ''"/></span>
                                <span class="record-name" ><t t-esc="record.quantity_remain || ''"/></span>
                                <span class="record-name"><t t-esc="record.product_uom || ''"/></span>
                                <span t-if="state.selectedRecords.includes(record.id) || state.selectedRecord == record.id" class="record-checkmark">&#10003;</span>
                            </li>
                        </t>
                    </ul>
                </t>
                <t t-if="props.isSelector == false &amp;&amp; props.title == 'Chia tách Packages'">
                    <div class="package-info">
                        <div class="package-info-item">
                            <label for="packageName">Package Nguồn:</label>
                            <div t-esc="state.packageName" id="packageName" class="s_selector-info-output"></div>
                        </div>
                        <div class="package-info-item">
                            <label for="packageProductQty">Số lượng hiện tại:</label>
                            <div t-esc="state.packageProductQty" id="packageProductQty" class="s_selector-info-output"></div>
                        </div>
                        
                        <div class="package-info-item">
                            <label for="qtyPerPackage">Số lượng sản phẩm trong một Package:</label>
                            <input t-model="state.qtyPerPackage" id="qtyPerPackage"  class="s_selector-search-input"/>
                        </div>
                        <!-- Toggle Switch True/False -->
                        <div class="package-info-item">
                            <label for="showPackageQty">Tạo Package mới?</label>
                            <label class="switch">
                                <input type="checkbox" t-model="state.showPackageQty" id="showPackageQty" />
                                <span class="slider round"></span>
                            </label>
                            
                        </div>
                        <!-- Conditional content based on the switch value -->
                        <div t-if="state.showPackageQty">
                            <div class="package-info-item">
                                <label for="packageQty">Số lượng Package mới:</label>
                                <input t-model="state.packageQty" id="packageQty" class="s_selector-search-input"/>
                            </div>
                        </div>
                        <div t-if="!state.showPackageQty">
                            <div class="package-info-item">
                                <label>Danh sách các Package đích:</label>
                                <div class="package-tags">
                                    <t t-foreach="state.processedPackages" t-as="package" t-key="package.id">
                                        <span class="package-tag"><t t-esc="package.name" /></span>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
                <t t-if="props.isSelector == false and props.title == 'Đóng Packages loạt'">
                    <div class="package-info">
                        <div class="package-info-item">
                            <label for="productName">Tên sản phẩm:</label>
                            <div t-esc="props.move.product_name" id="productName" class="s_selector-info-output"></div>
                        </div>
                        <t t-if="props.move.product_tracking !== 'none'">
                            <div class="package-info-item">
                                <label for="lotName">Số lô:</label>
                                <!-- Input field for lot number -->
                                <input t-model="state.lot_name" id="lotName" class="s_selector-search-input"/>
                            </div>
                        </t>
                        <div class="package-info-item">
                            <label for="remainingQty">Số lượng:</label>
                            <!-- <div t-esc="this.roundToTwo(props.move.product_uom_qty - props.move.quantity)" id="remainingQty" class="s_selector-info-output"></div> -->
                            <input t-model="state.remainingQty" id="remainingQty" class="s_selector-search-input"/>
                        </div>
                        <div class="package-info-item">
                            <label for="qtyPerPackage">Số lượng trên một pack:</label>
                            <input t-model="state.qtyPerPackage" id="qtyPerPackage" class="s_selector-search-input"/>
                        </div>
                        <div class="package-info-item">
                            <label for="createPackageQty">Tạo Package mới?</label>
                            <label class="switch">
                                <input type="checkbox" t-model="state.createPackageQty" id="createPackageQty" />
                                <span class="slider round"></span>
                            </label>
                        </div>
                        <div t-if="!state.createPackageQty">
                            <div class="package-info-item">
                                <label>Danh sách các Package đích:</label>
                                <div class="package-tags">
                                    <t t-foreach="state.resultPackages" t-as="package" t-key="package.id">
                                        <span class="package-tag"><t t-esc="package.name" /></span>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <div t-if="state.createPackageQty" class="package-info-item">
                            <label for="packageQty">Số pack:</label>
                            <input t-model="state.packageQty" id="packageQty" class="s_selector-search-input"/>
                        </div>
                    </div>
                </t>
                <div class="s_selector-action-buttons">
                    <button t-on-click="confirmSelection">Đồng ý</button>
                    <button t-on-click="createNew" t-if="state.searchQuery &amp;&amp; props.title == 'Chọn số Lô/Sê-ri'">Tạo Mới</button>
                    <button t-on-click="cancelSelection">Hủy</button>       
                </div>
            </div>
        </div>
    </t>

    <t t-name="ProductionEntryDialog">
        <!-- Chi tiết dịch chuyển -->
        <div class="s-app-container">
            <div class="s-main-content-wrapper">
                <h1 class="s-app-title">
                    Ghi nhận Tiêu thụ/Thành phẩm
                </h1>

                <!-- Error message display -->
                <t t-if="state.errorMessage">
                    <div class="s-error-message" role="alert">
                        <strong class="s-font-bold">Thông báo:</strong>
                        <span class="s-block s-sm-inline s-ml-2"><t t-esc="state.errorMessage"/></span>
                    </div>
                </t>

                <!-- Hidden QR Scanner element (still needed for functionality) -->
                <!-- Trong Odoo, phần này sẽ được quản lý bởi một widget JS tùy chỉnh -->
                <div id="qr-reader" style="width: 1px; height: 1px; overflow: hidden; position: absolute; top: -9999px; left: -9999px;"></div>
                
                <!-- Scanned Codes List (as removable widgets) -->
                <div class="s-scanned-codes-section">
                    <h2 class="s-scanned-codes-title">Danh sách đã quét</h2>
                    <div class="package-info-item">
                        <div class="package-tags">
                            <t t-foreach="state.processedPackages" t-as="package" t-key="package.id">
                                <span class="package-tag"><t t-esc="package.name" /></span>
                            </t>
                        </div>
                    </div>
                </div>

                <!-- Combined Product Quantities Table -->
                <div class="s-product-quantities-section">
                    <h2 class="s-product-quantities-title">Tổng số lượng sản phẩm</h2>
                    <t t-if="state.combinedProductData.length === 0">
                        <p class="s-empty-list-message">Chưa có thông tin sản phẩm.</p>
                    </t>
                    <t t-else="">
                        <div class="s-table-responsive-wrapper">
                            <table class="s-product-table">
                                <thead class="s-bg-purple-200">
                                    <tr>
                                        <th class="s-py-2 s-px-3 s-text-left s-text-purple-800 s-font-semibold s-rounded-tl-md">Sản phẩm</th>
                                        <th class="s-py-2 s-px-3 s-text-left s-text-purple-800 s-font-semibold">Đã làm / Nhu cầu</th>
                                        <th class="s-py-2 s-px-3 s-text-left s-text-purple-800 s-font-semibold s-rounded-tr-md">Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="state.combinedProductData" t-as="data" t-key="data_index">
                                        <tr class="s-border-b s-border-purple-100 s-last-border-b-0 s-hover-bg-purple-50">
                                            <td class="s-py-2 s-px-3"><t t-esc="data.productName"/></td>
                                            <td class="s-py-2 s-px-3 s-font-bold">
                                                <t t-esc="data.quantityDone"/> / <t t-esc="data.quantityNeeded"/>
                                            </td>
                                            <td class="s-py-2 s-px-3">
                                                <button t-on-click="() => this.openDetailsModal(data.productName, data.quantityDone, data.quantityNeeded)"
                                                        class="s-detail-button">
                                                    Chi tiết ✨
                                                </button>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </div>

                <!-- Action Buttons -->
                <div class="s-action-buttons-wrapper">
                    <button t-on-click="this.handleRecordProducts"
                            class="s-record-button">
                        Ghi nhận sản phẩm
                    </button>
                    <button t-on-click="this.closeDialog"
                            class="s-reset-button">
                        Huỷ
                    </button>
                </div>

                <!-- Combined Product Details Modal -->
                <t t-if="state.showDetailsModal">
                    <div class="s-modal-overlay">
                        <div class="s-modal-content">
                            <div class="s-modal-header">
                                <h3 class="s-modal-title">Chi tiết sản phẩm: <t t-esc="state.modalProductData.productName"/></h3>
                                <button t-on-click="this.closeDetailsModal"
                                        class="s-modal-close-button"
                                        aria-label="Đóng">
                                    &amp;times;
                                </button>
                            </div>

                            <div class="s-mb-4">
                                <h4 class="s-modal-section-title">Mô tả sản phẩm:</h4>
                                <p class="s-modal-text">
                                    <t t-if="state.modalProductData.isLoadingDescription">
                                        <span class="s-flex s-items-center">
                                            <svg class="s-animate-spin s-minus-ml-1 s-mr-3 s-h-5 s-w-5 s-text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                              <circle class="s-opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                              <path class="s-opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                            </svg>
                                            Đang tạo mô tả...
                                        </span>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="state.modalProductData.description"/>
                                    </t>
                                </p>
                            </div>

                            <div class="s-mb-4">
                                <h4 class="s-modal-section-title">Bước tiếp theo:</h4>
                                <p class="s-modal-text">
                                    <t t-if="state.modalProductData.isLoadingNextSteps">
                                        <span class="s-flex s-items-center">
                                            <svg class="s-animate-spin s-minus-ml-1 s-mr-3 s-h-5 s-w-5 s-text-teal-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                              <circle class="s-opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                              <path class="s-opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                            </svg>
                                            Đang tạo bước tiếp theo...
                                        </span>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="state.modalProductData.nextSteps"/>
                                    </t>
                                </p>
                            </div>

                            <div class="s-modal-footer">
                                <button t-on-click="this.closeDetailsModal"
                                        class="s-modal-footer-button">
                                    Đóng
                                </button>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>
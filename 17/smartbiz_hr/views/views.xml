                <button name="action_to_approve_approve" string="Approve" type = "object"  invisible="state != 'to_approve'" groups="smartbiz_hr.group_roles_approver_5"/>
                <button name="action_refused_to_draft" string="To Draft" type = "object"  invisible="state == 'draft'" groups="smartbiz_hr.group_roles_leader_4, smartbiz_hr.group_roles_approver_5"/>
                <field name="state" widget="statusbar" />
            </header>
      <sheet>
          <group col="1">
                   <field name="request_id"/>

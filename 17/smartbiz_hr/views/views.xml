    <record model="ir.ui.view" id="smartbiz_hr_overtime_request_form">
      <field name="name">smartbiz_hr_overtime_request_form</field>
      <field name="model">smartbiz_hr.overtime_request</field>
      <field name="priority" eval="6"/>
      <field name="arch" type="xml">
        <form string="Form Overtime Request">
            <header>
                <button name="action_draft_submit" string="Submit" type = "object" class="oe_highlight" invisible="state != 'draft'"/>
                <button name="action_to_submit_approve" string="Approve" type = "object" class="oe_highlight" invisible="state != 'to_submit'" groups="smartbiz_hr.group_roles_leader_4"/>
                <button name="action_to_submit_refuse" string="Refuse" type = "object"  invisible="state not in [ 'to_submit', 'to_approve']" groups="smartbiz_hr.group_roles_leader_4, smartbiz_hr.group_roles_approver_5"/>
                <button name="action_to_approve_approve" string="Approve" type = "object" class="oe_highlight" invisible="state != 'to_approve'" groups="smartbiz_hr.group_roles_approver_5"/>
                <button name="action_refused_to_draft" string="To Draft" type = "object"  invisible="state == 'draft'" groups="smartbiz_hr.group_roles_leader_4, smartbiz_hr.group_roles_approver_5"/>
                <field name="state" widget="statusbar" />
            </header>
      <sheet>
            <group col="2">
            <group>
                   <field name="name"/>
                   <field name="employee_ids" widget="many2many_tags"/>
            </group>
            <group>
                   <field name="start_date"/>
                   <field name="end_date"/>
                   <field name="duration"/>
            </group>
            </group>
            <notebook>
            <page string="Detail">
                   <field name="lines_ids"/>
            </page>
            <page string="Notes">
            <group>
                   <field name="note"/>
                   <field name="approver_ids"/>
            </group>
            </page>
            </notebook>
      </sheet>
      <div class="oe_chatter">
             <field name = "message_follower_ids" widget="mail_followers"/>
             <field name = "activity_ids" widget="mail_activity"/>
             <field name = "message_ids" widget="mail_thread"/>
      </div>
        </form>
      </field>
    </record>


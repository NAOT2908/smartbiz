<odoo>

<!-- Forms -->

    <record model="ir.ui.view" id="hr_contract_form">
      <field name="name">hr_contract_form</field>
      <field name="model">hr.contract</field>
      <field name="priority" eval="7"/>
      <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
      <field name="arch" type="xml">
           <xpath expr="//notebook" position="inside">
            <page string="Calculation Policy">
            <group>
                   <field name="calculation_policy_id"/>
            </group>
            </page>
           </xpath>
           <xpath expr="//notebook" position="inside">
            <page string="Allowance">
                   <field name="allowance_ids"/>
            </page>
           </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="hr_work_entry_form">
      <field name="name">hr_work_entry_form</field>
      <field name="model">hr.work.entry</field>
      <field name="priority" eval="7"/>
      <field name="inherit_id" ref="hr_work_entry.hr_work_entry_view_form" />
      <field name="arch" type="xml">
           <xpath expr="//field[@name='company_id']" position="after">
                   <field name="source"/>
                   <field name="source_key"/>
                   <field name="work_day"/>
           </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="hr_attendance_form">
      <field name="name">hr_attendance_form</field>
      <field name="model">hr.attendance</field>
      <field name="priority" eval="7"/>
      <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form" />
      <field name="arch" type="xml">
            <xpath expr="//form[not(header)]/sheet[1]" position="before">
                <header/>
            </xpath>
            <xpath expr="//header" position ="inside">
                <button name="action_draft_submit" string="Submit" type = "object" class="oe_highlight" invisible="state != 'draft'"/>
                <button name="action_to_submit_approve" string="Approve" type = "object"  invisible="state != 'to_submit'"/>
                <button name="action_to_submit_refuse" string="Refuse" type = "object"  invisible="state != 'to_submit'"/>
                <button name="action_to_submit_redo" string="Redo" type = "object"  invisible="state != 'to_submit'"/>
                <field name="state" widget="statusbar" />
            </xpath>
         <xpath expr="//field[@name='employee_id']" position="after">
           </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="hr_employee_form">
      <field name="name">hr_employee_form</field>
      <field name="model">hr.employee</field>
      <field name="priority" eval="7"/>
      <field name="inherit_id" ref="hr.view_employee_form" />
      <field name="arch" type="xml">
         <xpath expr="//field[@name='category_ids']" position="before">
                   <field name="display_name"/>
                   <field name="code"/>
           </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="resource_calendar_leaves_form">

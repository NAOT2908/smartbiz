<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Kế thừa MainMenu gốc -->
    <t t-name="CustomMainMenu"
       t-inherit="smartbiz_barcode.MainMenu"
       t-inherit-mode="extension">

        <!-- Chèn thêm hai nút vào khối main-buttons -->
        <xpath expr="//div[@class='main-buttons']" position="inside">

            <!-- Nút “Operations” -->
            <button class="button-operations"
                    t-on-click="() => this.openPickingType()">Operations</button>

            <!-- Nút “Bulk Transfer” -->
            <button class="button-operations"
                    t-on-click="() => this.openPickingBatch()" >Batch Transfer</button>

        </xpath>

    </t>

</templates>

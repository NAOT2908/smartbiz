    <record model="ir.ui.view" id="smartbiz_mes_production_activity_tree">
      <field name="name">smartbiz_mes_production_activity_tree</field>
      <field name="model">smartbiz_mes.production_activity</field>
      <field name="priority" eval="7"/>
      <field name="arch" type="xml">
        <tree string="Tree Production Activity" >
            <field name="work_order_id" optional="show"/>
            <field name="component_id" optional="show"/>
            <field name="quantity" optional="show"/>
            <field name="quality" optional="show"/>
            <field name="lot_id" optional="show"/>
            <field name="name" optional="show"/>
            <field name="start" optional="show"/>
            <field name="finish" optional="show"/>
            <field name="duration" optional="show"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="smartbiz_mes_bom_components_tree">
      <field name="name">smartbiz_mes_bom_components_tree</field>
      <field name="model">smartbiz_mes.bom_components</field>
      <field name="priority" eval="7"/>
      <field name="arch" type="xml">
        <tree string="Tree BoM Components" >
            <field name="name" optional="show"/>
            <field name="type" optional="show"/>
            <field name="quantity" optional="show"/>
            <field name="material_id" invisible="type != 'material'" domain="[('bom_id','=',bom_id)]" optional="show"/>
            <field name="product_id" invisible="type != 'product'" domain="[('bom_id','=',bom_id)]" optional="show"/>
            <field name="bom_id" optional="show"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="smartbiz_mes_check_point_tree">
      <field name="name">smartbiz_mes_check_point_tree</field>
      <field name="model">smartbiz_mes.check_point</field>
      <field name="priority" eval="7"/>
      <field name="arch" type="xml">
        <tree string="Tree Check Point" >
            <field name="name" optional="show"/>
            <field name="bom_id" optional="show"/>
            <field name="component_id" domain="[('bom_id','=',bom_id)]" optional="show"/>
            <field name="operation_id" domain="[('bom_id','=',bom_id)]" optional="show"/>
            <field name="type" optional="show"/>
            <field name="attached_ids" widget="many2many_binary"  optional="show"/>
            <field name="instruction" optional="show"/>
            <field name="code" optional="show"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="smartbiz_mes_production_report_tree">
      <field name="name">smartbiz_mes_production_report_tree</field>
      <field name="model">smartbiz_mes.production_report</field>
      <field name="priority" eval="7"/>
      <field name="arch" type="xml">
        <tree string="Tree Production Report" >
            <field name="production_order_id" optional="show"/>
            <field name="product_id" optional="show"/>
            <field name="currency_id" optional="show"/>
            <field name="date" optional="show"/>
            <field name="planned_quantity" optional="show"/>
            <field name="produced_quantity" optional="show"/>
            <field name="remaining_quantity" optional="show"/>
            <field name="yield_percentage" optional="show"/>
            <field name="component_cost" optional="hire"/>
            <field name="operation_cost" optional="hire"/>
            <field name="total_cost" optional="hire"/>
            <field name="component_cost_per_unit" optional="hire"/>
            <field name="operation_cost_per_unit" optional="hire"/>
            <field name="cost_per_unit" optional="hire"/>
            <field name="expected_duration" widget="float_time" optional="show"/>
            <field name="duration" widget="float_time" optional="show"/>
            <field name="duration_per_unit" widget="float_time" optional="hire"/>
            <field name="byproduct_cost" optional="hire"/>
        </tree>
      </field>
    </record>


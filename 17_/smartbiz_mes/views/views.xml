<odoo>

<!-- Forms -->

    <record model="ir.ui.view" id="mrp_production_form">
      <field name="name">mrp_production_form</field>
      <field name="model">mrp.production</field>
      <field name="priority" eval="7"/>
      <field name="inherit_id" ref="mrp.mrp_production_form_view" />
      <field name="arch" type="xml">
           <xpath expr="//field[@name='user_id']" position="after">
                   <field name="production_line_id"/>
           </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="mrp_workcenter_form">
      <field name="name">mrp_workcenter_form</field>
      <field name="model">mrp.workcenter</field>
      <field name="priority" eval="7"/>
      <field name="inherit_id" ref="mrp.mrp_workcenter_view" />
      <field name="arch" type="xml">
           <xpath expr="//field[@name='resource_calendar_id']" position="after">
                   <field name="production_line_id"/>
           </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="mrp_bom_form">
      <field name="name">mrp_bom_form</field>
      <field name="model">mrp.bom</field>
      <field name="priority" eval="7"/>
      <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
      <field name="arch" type="xml">

           <xpath expr="//page[@name='by_products']" position="after">
                <page name="bom_components" string="Thành phần">
                    <field name="components_ids"/>
                </page>
             <page name="checkpoints" string="Điểm kiểm tra">
                    <field name="checkpoints_ids"/>
                </page>
            </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="smartbiz_mes_factory_form">
      <field name="name">smartbiz_mes_factory_form</field>
      <field name="model">smartbiz_mes.factory</field>
      <field name="priority" eval="6"/>
      <field name="arch" type="xml">
        <form string="Form Factory">
      <sheet>
            <group>
                   <field name="name"/>
                   <field name="company_id"/>
            </group>
            <notebook>
            <page string="Production Lines">
                   <field name="production_lines_ids"/>
            </page>
            </notebook>
      </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="smartbiz_mes_production_line_form">
      <field name="name">smartbiz_mes_production_line_form</field>
      <field name="model">smartbiz_mes.production_line</field>
      <field name="priority" eval="6"/>
      <field name="arch" type="xml">
        <form string="Form Production Line">
      <sheet>
            <group>
                   <field name="name"/>
                   <field name="factory_id"/>
            </group>
            <notebook>
            <page string="Work Centers">
                   <field name="work_centers_ids"/>
            </page>
            </notebook>
      </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="smartbiz_mes_production_activity_form">
      <field name="name">smartbiz_mes_production_activity_form</field>
      <field name="model">smartbiz_mes.production_activity</field>
      <field name="priority" eval="6"/>
      <field name="arch" type="xml">
        <form string="Form Production Activity">
      <sheet>
          <group col="1">
                   <field name="work_order_id"/>
                   <field name="component_id"/>
                   <field name="quantity"/>
                   <field name="quality"/>
                   <field name="lot_id"/>
                   <field name="name"/>
                   <field name="start"/>
                   <field name="finish"/>
                   <field name="duration"/>
          </group>
      </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="smartbiz_mes_bom_components_form">
      <field name="name">smartbiz_mes_bom_components_form</field>
      <field name="model">smartbiz_mes.bom_components</field>
      <field name="priority" eval="6"/>
      <field name="arch" type="xml">
        <form string="Form BoM Components">
      <sheet>
            <group col="2">
            <group>
                   <field name="name"/>
                   <field name="type"/>
                   <field name="quantity"/>
            </group>
            <group>
                   <field name="material_id" invisible="type != 'material'" domain="[('bom_id','=',bom_id)]"/>
                   <field name="product_id" invisible="type != 'product'" domain="[('bom_id','=',bom_id)]"/>
                   <field name="bom_id"/>
            </group>
            </group>
            <notebook>
            <page string="Công đoạn">
                   <field name="operations_ids" domain="[('bom_id','=',bom_id)]"/>
            </page>
            </notebook>
      </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="smartbiz_mes_check_point_form">
      <field name="name">smartbiz_mes_check_point_form</field>
      <field name="model">smartbiz_mes.check_point</field>
      <field name="priority" eval="6"/>
      <field name="arch" type="xml">
        <form string="Form Check Point">
      <sheet>
            <group col="2">
            <group>
                   <field name="name"/>
                   <field name="bom_id"/>
            </group>
            <group>
                   <field name="component_id" domain="[('bom_id','=',bom_id)]"/>
                   <field name="operation_id" domain="[('bom_id','=',bom_id)]"/>
                   <field name="type"/>
            </group>
            </group>
            <notebook>
            <page string="File">
                   <field name="attached_ids" widget="many2many_binary" />
            </page>
            <page string="Hướng dẫn">
                   <field name="instruction"/>
            </page>
            <page string="Code">
                   <field name="code"/>
            </page>
            </notebook>
      </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="smartbiz_mes_production_report_form">
      <field name="name">smartbiz_mes_production_report_form</field>
      <field name="model">smartbiz_mes.production_report</field>
      <field name="priority" eval="6"/>
      <field name="arch" type="xml">
        <form string="Form Production Report">
      <sheet>
          <group col="1">
                   <field name="production_order_id"/>
                   <field name="product_id"/>
                   <field name="currency_id"/>
                   <field name="date"/>
                   <field name="planned_quantity"/>
                   <field name="produced_quantity"/>
                   <field name="remaining_quantity"/>
                   <field name="yield_percentage"/>
                   <field name="component_cost"/>
                   <field name="operation_cost"/>
                   <field name="total_cost"/>
                   <field name="component_cost_per_unit"/>
                   <field name="operation_cost_per_unit"/>
                   <field name="cost_per_unit"/>
                   <field name="expected_duration" widget="float_time"/>
                   <field name="duration" widget="float_time"/>
                   <field name="duration_per_unit" widget="float_time"/>
                   <field name="byproduct_cost"/>
          </group>
      </sheet>
        </form>
      </field>
    </record>

<!-- Trees -->

    <record model="ir.ui.view" id="mrp_production_tree">
      <field name="name">mrp_production_tree</field>
      <field name="model">mrp.production</field>
      <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
      <field name="priority" eval="7"/>
      <field name="arch" type="xml">
           <xpath expr="//field[@name='name']" position="after">
            <field name="production_line_id" optional="show"/>

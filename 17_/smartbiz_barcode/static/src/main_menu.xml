<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <div t-name="MainMenu" class="interface-fullscreen">
        <div class="s_barcode_main_menu_container">
            <!-- Nút quay lại (back) được đặt bên trong s_barcode_main_menu_container -->
            <a href="#" class="button-back" t-on-click="() => this.home.toggle(true)">
                <i class="icon-back oi oi-chevron-left"></i>
            </a>

            <!-- Container mã vạch -->
            <div class="barcode-container">
                <div class="mobile-scanner">
                    <img src="/barcodes/static/img/barcode.png" alt="Barcode" class="image-barcode button-scan" t-on-click="openMobileScanner"/>
                    <div class="laser-animation"></div>
                </div>
            </div>
            <!-- Phần mô tả chức năng mã vạch -->
            <!-- <div class="feature-description" >
                <ul>
                    <li>Quét mã vạch sản phẩm</li>
                    <li>Kiểm kê hàng hóa bằng mã vạch</li>
                    <li>...</li>
                </ul>
            </div> -->
            <!-- Các nút chức năng -->
            <div class="main-buttons">
                <button class="button-operations" t-on-click="() => this.openPickingType()">
                    Hoạt động
                </button>
                <button class="button-operations" t-on-click="() => this.openPickingBatch()">
                    Điều chuyển hàng loạt
                </button>
                <!-- <button class="button-operations"  t-on-click="() => this.openInventory()">
                    Điều chỉnh tồn kho (<t t-out="this.state.data.length"/>)
                </button> -->
                <button class="button-operations"  t-on-click="() => this.openPop()">
                    POP
                </button>
                <button class="button-operations"  t-on-click="() => this.openWorkorder()">
                    Work Order
                </button>
            </div>
        </div>
    </div>
</templates>
